<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<figure class="text-center">
	<blockquote class="blockquote">
		<p>
			Too often we underestimate the power of a touch, a smile, a kind word, a
			listening ear, an honest compliment, or the smallest act of caring, all of
			which have the potential to turn a life around.
		</p>
	</blockquote>
	<figcaption class="blockquote-footer">Leo Buscaglia</figcaption>
</figure>
<div class="row">
	<% for(let carer of carers){ %>
	<div class="col-md-6">
		<div class="card mb-3">
			<div class="row">
				<div class="col-md-4">
					<% if(carer.images.length){ %>
					<img
						class="img-fluid img-thumbnail"
						alt="Healthcare related image"
						src="<%= carer.images[0].url %> "
					/>
					<% } else { %>
					<img
						class="img-fluid img-thumbnail"
						src="https://res.cloudinary.com/dmgkrtebm/image/upload/v1607192446/Carer/rr0pbwayv03wqun1ccoo.jpg"
						alt="Healthcare freelancer with a computer"
					/>
					<% } %>
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title"><%= carer.title %></h5>
						<p class="card-text"><%= carer.description %></p>
						<p class="card-text">
							<small class="text-muted"><%= carer.location %> </small>
						</p>
						<a href="/carers/<%= carer._id %>" class="btn btn-outline-primary"
							>More info...
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% } %>
</div>

<script>
	const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
	const carers = {features: <%- JSON.stringify(carers) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>
